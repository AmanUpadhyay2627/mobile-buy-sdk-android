<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Button">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="OrderSummaryTextView">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">6dp</item>
    </style>

    <style name="ProductOptionsTextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="Switch">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="SampleWalletButton" parent="WalletFragmentDefaultStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="buyButtonHeight">64dp</item>
    </style>

    <style name="SampleWalletFragmentDetailsTextAppearance">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SampleWalletFragmentDetailsHeaderTextAppearance"
           parent="SampleWalletFragmentDetailsTextAppearance">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme"
           parent="@style/Theme.AppCompat.DialogWhenLarge">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarSize">@dimen/action_bar_height</item>

        <item name="android:background">@android:color/transparent</item>

        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>

        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="VariantOptionName">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="VariantOptionValue">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>
</resources>
